extends base.pug

block icons
  .icon.active
    a(href="")
      include ../assets/img/Loop.svg
  .icon
    a(href="")
      include ../assets/img/Profile.svg

  .icon
    a(href="")
      include ../assets/img/Mail.svg
  .icon
    a(href="")
      include ../assets/img/Schedule.svg

block breadcrumbs
  a(href="#") Home
  img(src="/images/Chevron-right.svg", alt="")
  a(href="#") Search
  img(src="/images/Chevron-right.svg", alt="")
  a(href="#") Results

block headerInfo
  a(href="#") Sarah Freeman
  img(src="/images/Chevron-down.svg", alt="")

block content
  section.search_menu
    .part
      p.title Location
      .title-choose
        img(src="/images/Location.svg", alt="" class="location")
        img(src="/images/Chevron-down.svg", alt="" class="chevron-down")
    .part
      p.title Search
      input(type="text" placeholder="Type your query..." class="firstLast")
    .part
      p.title Category
      .title-choose
        p Category
        img(src="/images/Chevron-down.svg", alt="" class="chevron-down")
    .part
      p.title Service
      .title-choose
        p 3 services
        img(src="/images/Chevron-down.svg", alt="" class="chevron-down")
    .part
      p.title Period
      input(type="text" name="daterange" class="firstLast")
      script(src="/javascript/date.js")
    .button-wrap
      button.button SEARCH
  section.search_results
    .search_topbar
      p.show_map show map
      .topbar_menu
        include ../assets/img/order.svg
        form(action="/search", method="post").radios
          .radio
            input(id="radio-1" name="radio" type="radio" value="price" onChange="this.form.submit()")
            label(for="radio-1" class="radio-label") 
            span by price
          .radio
            input(id="radio-2" name="radio" type="radio" value="rating" onChange="this.form.submit()")
            label(for="radio-2" class="radio-label") 
            span by rating
    .people
      each elem in users
       .user 
        img(src="/images/Faruh.jpg", alt="")
        .user-info
          .user-name
            p= elem.firstName + ' ' + elem.lastName
            if elem.rating < 3 
              include ../assets/img/bronze.svg
            else if elem.rating >= 3 && elem.rating <= 6
              include ../assets/img/silver.svg
            else if elem.rating > 6
              include ../assets/img/gold.svg
          .small-info
            .location
              img(src="/images/Location.svg", alt="" class="location")
              p Vancouver, Canada
            .stack
              p.stack-name= 'Stack: '
              p.stack-list= elem.category
              a(href="/personInfo/" + elem.id).more More...
            .price
              p.base-daily-rate Base Daily Rate:
              p.price= '$ ' + elem.price + ' USD' 


